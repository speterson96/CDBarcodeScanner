<div class="moveBelowHeader">
</div>
<link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">

<div class="mainWrapper">
  <div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
  
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
  
        <div class="item active">
          <img src="/assets/coffeeTable.jpg" alt="Los Angeles" style="width:100%;">
          <div class="carousel-caption">
            <h3>Did You Know?</h3>
            <p>We are here to try to keep you up to date with everything you need or want.</p>
          </div>
        </div>
  
        <div class="item">
          <img src="/assets/food.jpg" alt="Chicago" style="width:100%;">
          <div class="carousel-caption">
            <h3>Everything can be added to your personal shopping list!</h3>
          </div>
        </div>
      
        <div class="item">
          <img src="/assets/food.jpg" alt="New York" style="width:100%;">
          <div class="carousel-caption">
            <h3>
              Your inventory could contain anything from the newly 
              released movies to what you plan on making for dinner.
            </h3>
          </div>
        </div>
    
      </div>
  
      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
      
      
      <div class="barcodeLink">
        <h3>Add an item:</h3>
        <%= link_to 'inventory' do %><%= image_tag('barcode.png', width: '100', height: '100', class: 'img-barcode') %><% end %>
      </div>
    </div>
  </div>
</div>
  
  <div class="content">
    <div class="content__container">
      <p class="content__container__text">
        GET ORGANIZED...
      </p>
      
      <ul class="content__container__list">
        <li class="content__container__list__item"> CDs </li>
        <li class="content__container__list__item"> DVDs </li>
        <li class="content__container__list__item"> Shopping Lists </li>
        <li class="content__container__list__item"> Wish Lists </li>
      </ul>
    </div>
  </div>

<!-- Link for bootstrap slider -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</div>
</body>

